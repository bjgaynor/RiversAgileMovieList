%p
  %b Name:
  = @movie_list.name
%p
  %b Average Rating:
  = @movie_list.average_rating
%p
  %b Number of Movies:
  = @movie_list.number_of_movies

- @movie_list.movies.each do |movie|
  %tr
    %td= movie.year_of_release
    %td= movie.name
    %td= movie.rating
    %td= movie.genre

    %td=# link_to 'Show', movie
    %td=# link_to 'Edit', edit_movie_path(movie_list)
    %td=# link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'Back', movie_lists_path, class: "btn btn-info"
= link_to 'Edit', edit_movie_list_path(@movie_list), class: "btn btn-warning"
